package StreamsFilesAndDirectories4;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.util.List;

public class SumLines {
    public static void main(String[] args) throws IOException {

        String pathToFile = "C:\\Users\\didar\\Desktop\\Java Advanced - 10.01.23 - 13.09.22\\src\\StreamsFilesAndDirectories4\\04. Java-Advanced-Files-and-Streams-Exercises-Resources\\input.txt";
        
        List<String> allLines = Files.readAllLines(Path.of(pathToFile));

        for (String line : allLines) {
            int sum = 0;
            
            for (char symbol : line.toCharArray()) {
                sum += (int) symbol;
            }
            System.out.println(sum);
        }
    }
}
